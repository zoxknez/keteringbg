generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Menu {
  id          String   @id @default(cuid())
  name        String   // e.g., "Meni 1 (5 Jela)", "Meni 2 (7 Jela)"
  dishCount   Int      // 5, 7, or 10
  price       Decimal? // Optional, since "no payment" was requested, but good to have
  orders      Order[]
  dishes      Dish[]
}

model Dish {
  id          String       @id @default(cuid())
  name        String
  description String?
  imageUrl    String?
  videoUrl    String?
  category    DishCategory
  tags        DishTag[]    @default([])
  isVegetarian Boolean     @default(false)
  isVegan     Boolean      @default(false)
  isFasting   Boolean      @default(false) // Posno
  isAvailable Boolean      @default(true)  // Daily availability toggle
  orders      OrderDish[]
  menus       Menu[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt
}

enum DishTag {
  PORK       // Svinjetina
  CHICKEN    // Piletina
  BEEF       // Junetina
  FISH       // Riba
  VEGETARIAN // Vegetarijansko
  VEGAN      // Vegansko
  FASTING    // Posno
}

model Order {
  id          String      @id @default(cuid())
  clientName  String
  clientEmail String
  clientPhone String?
  address     String?
  eventDate   DateTime?
  message     String?
  portions    Int         @default(1)
  status      OrderStatus @default(PENDING)
  
  menuId      String
  menu        Menu        @relation(fields: [menuId], references: [id])
  
  selectedDishes OrderDish[]

  createdAt   DateTime    @default(now())
}

model OrderDish {
  id       String @id @default(cuid())
  orderId  String
  order    Order  @relation(fields: [orderId], references: [id])
  dishId   String
  dish     Dish   @relation(fields: [dishId], references: [id])

  @@unique([orderId, dishId])
}

enum DishCategory {
  APPETIZER
  MAIN
  DESSERT
}

enum OrderStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

// Admin user for authentication
model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // hashed password
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

// Site settings/content management
model SiteSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @default(now()) @updatedAt
}
